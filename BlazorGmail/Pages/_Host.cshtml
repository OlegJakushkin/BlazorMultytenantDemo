@page "/"
@using BlazorMultytenantDemo
@using Finbuckle.MultiTenant
@using Microsoft.AspNetCore.Http
@namespace BlazorGmail.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject IHttpContextAccessor _httpContextAccessor


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BlazorAzureActiveDirectory</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
</head>
<body>
    @if (_httpContextAccessor.HttpContext.GetMultiTenantContext<TenantInfo>()?.TenantInfo != null)
    {
        <h1>AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA</h1>
    }
    <app>
        @(await Html.RenderComponentAsync<App>(RenderMode.ServerPrerendered))
    </app>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
